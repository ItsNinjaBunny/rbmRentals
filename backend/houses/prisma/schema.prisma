// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model House {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  property_name String     @db.VarChar(30)
  house_type    String     @db.VarChar(10)
  beds          Int
  baths         Int
  workspace     Int
  stay          DateTime[]

  house_amenities  HouseAmenity? @relation(fields: [houseAmenitiesId], references: [id])
  houseAmenitiesId String?       @unique
  rooms            Room[]

  zipcode    String   @db.VarChar(5)
  address    Address? @relation(fields: [address_id], references: [id])
  address_id Int      @unique
}

model Address {
  id Int @id @default(autoincrement())

  city       String
  state_code String  @db.VarChar(2)
  house      House[]
}

model HouseAmenity {
  id             String  @id @default(uuid())
  master_bedroom Boolean
  outdoor_patio  Boolean
  fireplace      Boolean
  firepit        Boolean
  pet_friendly   Boolean
  locked_rooms   Boolean
  parking        Boolean
  backyard       Boolean

  house House?
}

model Room {
  id          String  @id @default(uuid())
  room_number String
  occupied    Boolean @default(false)
  house       House?  @relation(fields: [house_id], references: [id])
  house_id    String?
}
